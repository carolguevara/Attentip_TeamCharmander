<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PausaFisica">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/appbar"
            app:navigationIcon="@drawable/ic_menu_24"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:background="@drawable/fisica"
            android:layout_marginTop="55dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pausa Activa:"
                android:textStyle="bold"
                style="@style/AppTheme.Base.Title2"
                app:layout_constraintBottom_toTopOf="@+id/text2"
                />

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Física"
                style="@style/AppTheme.Base.CardText"
                android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/welcome"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/logoapp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.27"
            />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Elige el tiempo de duración:"
            style="@style/AppTheme.Base.TextP"
            app:layout_constraintVertical_bias="0.42"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            />

        <LinearLayout
            android:id="@+id/linetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/text3">

            <com.google.android.material.button.MaterialButton
                android:layout_width="90dp"
                android:layout_height="75dp"
                app:cornerRadius="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/rojo_de_fisico"
                android:text="@string/time3"
                android:textSize="15sp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="90dp"
                android:layout_height="75dp"
                app:cornerRadius="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/rojo_de_fisico"
                android:text="@string/time5"
                android:textSize="15sp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="90dp"
                android:layout_height="75dp"
                app:cornerRadius="10dp"
                android:backgroundTint="@color/rojo_de_fisico"
                android:text="@string/time10"
                android:textSize="15sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Elige tu sesión favorita:"
            style="@style/AppTheme.Base.TextP"
            app:layout_constraintTop_toBottomOf="@+id/linetime"
            />

        <LinearLayout
            android:id="@+id/linesession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/text4">

            <com.google.android.material.button.MaterialButton
                android:layout_width="290dp"
                android:layout_height="75dp"
                app:cornerRadius="10dp"
                android:backgroundTint="@color/rojo_de_fisico"
                android:text="Flexibilidad Dinámica"
                android:textAllCaps="false"
                android:textSize="18sp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="290dp"
                android:layout_height="75dp"
                app:cornerRadius="10dp"
                android:backgroundTint="@color/rojo_de_fisico"
                android:text="Activación Muscular"
                android:textAllCaps="false"
                android:textSize="18sp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="290dp"
                android:layout_height="75dp"
                app:cornerRadius="10dp"
                android:backgroundTint="@color/rojo_de_fisico"
                android:text="Movilidad Articular"
                android:textAllCaps="false"
                android:textSize="18sp"/>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>